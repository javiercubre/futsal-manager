{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Futsal Manager",
  "version": "0.1.0",
  "identifier": "com.futsalmanager.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Futsal Manager",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Futsal Manager - Football Management Simulation Game",
    "longDescription": "A futsal (5-a-side football) management simulation game featuring real-time match simulation, tactical management, transfers, and league competitions.",
    "category": "Game",
    "windows": {
      "allowDowngrades": true
    }
  }
}
